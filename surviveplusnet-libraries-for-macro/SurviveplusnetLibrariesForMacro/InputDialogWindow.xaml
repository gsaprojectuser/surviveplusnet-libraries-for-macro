<Window x:Class="InputDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="InputDialogWindow" Height="146" Width="454" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="36" />
        </Grid.RowDefinitions>
        <Button IsDefault="True" Margin="0,6.426,112.674,5.712" Name="OkButton" Grid.Row="1" HorizontalAlignment="Right" Width="95">OK</Button>
        <Button HorizontalAlignment="Right" IsCancel="True" Margin="0,6.426,12,5.712" Name="CancelButton" Width="95" Grid.Row="1">キャンセル</Button>
        <TextBox Margin="10,10,12,0" Name="inputBox" Height="27" VerticalAlignment="Top" />
        <Label Margin="12,43,12,36" Name="errorMessage" Grid.RowSpan="2" Foreground="Red">* 値を入力してください。</Label>
    </Grid>
</Window>
